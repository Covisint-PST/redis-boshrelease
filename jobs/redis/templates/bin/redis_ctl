#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/redis/helpers/ctl_setup.sh 'redis'

export LANG=en_US.UTF-8

case $1 in

  start)
    pid_guard $PIDFILE $JOB_NAME

    CONSUL_PREFIX=http://127.0.0.1:8500/v1/kv/cluster/$DEPLOYMENT/nodes/$JOB_FULL
    curl -XPUT $CONSUL_PREFIX/role -d$ROLE

    exec redis-server $JOB_DIR/config/redis.conf \
         >>$LOG_DIR/$JOB_NAME.stdout.log \
         2>>$LOG_DIR/$JOB_NAME.stderr.log

    ;;

  stop)
    redis-cli shutdown
    kill_and_wait $PIDFILE

    ;;

  *)
    echo "Usage: redis_ctl {start|stop}"

    ;;

esac
exit 0
