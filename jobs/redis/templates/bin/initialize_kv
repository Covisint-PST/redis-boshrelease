#!/bin/bash

if [[ "${role}X" = "X" ]]; then
  echo "setup initial kv for redis..."

  if [[ "${INITIAL_MASTER:-}X" != "X" ]]; then
    curl -i -XPUT $CONSUL_PREFIX/master -d${INITIAL_MASTER}
  else
    curl -i -XDELETE $CONSUL_PREFIX/master
  fi
  curl -i -XPUT $CONSUL_PREFIX/role -d${INITIAL_ROLE}
else
  echo "kv already setup; skipping."
fi
