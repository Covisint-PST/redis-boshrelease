---
<%-
# Example source deployment file that can be used:
# ---
# name: NAME
# director_uuid: 4ae3a0f0-70a5-4c0d-95f2-7fafaefe8b9e
# networks: {}
# properties:
#   redis:
#     instance_type: m1.medium
#     security_groups: redis-server
#
# Then target that deployment file:
#
#     $ bosh deployment path/to/file/above
#
# Then apply this template:
#
#     $ bosh diff templates/aws/single_vm.yml.erb
#
redis_port = 6379
redis_password = random_string 12, :redis
-%>
name: <%= find("name") %>
director_uuid: <%= find("director_uuid") %>

release:
  name: redis
  version: latest

compilation:
  workers: 8
  network: compile
  cloud_properties: {}

update:
  canaries: 1
  canary_watch_time: 30000
  update_watch_time: 30000
  max_in_flight: 4

networks:

- name: compile
  subnets:
<%% (0..63).each_with_index.map do |i| %>
  - range: 10.244.0.<%%= i*4 %>/30
    reserved:
      - 10.244.0.<%%= i*4 + 1 %>
    cloud_properties:
      name: random
<%% end %>
- name: default
  subnets:
<%% (0..63).each_with_index.map do |i| %>
  - range: 10.244.1.<%%= i*4 %>/30
    reserved:
      - 10.244.1.<%%= i*4 + 1 %>
    static:
      - 10.244.1.<%%= i*4 + 2 %>
    cloud_properties:
      name: random
<%% end
(0..63).each_with_index.map do |i| %>
  - range: 10.244.2.<%%= i*4 %>/30
    reserved:
      - 10.244.2.<%%= i*4 + 1 %>
    cloud_properties:
      name: random
<%% end %>

resource_pools:

- name: infrastructure
  network: default
  size: 1
  stemcell:
    name: bosh-stemcell
    version: latest
  cloud_properties: {}


jobs:
- name: redis
  template: redis
  instances: 1
  resource_pool: infrastructure
  networks:
  - name: default
    static_ips:
    - 10.244.1.2

properties:
  redis:
    port: <%= redis_port %>
    password: <%= redis_password %>
